@model DLLGakuen.Entity.NewsMessage

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Lav en Nyhed</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-sm-2">Titel:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Brødtekst:</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Body, new {style = "height: 400px; width:300px; border-radius: 5px;", htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Body, "", new {@class = "text-danger"})
            </div>
        </div>

        <form action="/Create" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Billede:</label>
                <div class="col-md-10">
                    @*<label class="custom-file">
                        <input type="file" name="ImagePath" class="custom-file-input">
                        <span class="custom-file-control"></span>
                    </label>*@
                    <label for="formGroupExampleInput">Indæst Billede Link</label>
                    <input type="text" class="form-control" name="ImagePath" placeholder="www.exemple.net/image/image1.jpg">

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </form>
    </div>


}

<div>
    @Html.ActionLink("Tilbage Til Start Side", "Index",null, new { @class = "btn btn-default"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
