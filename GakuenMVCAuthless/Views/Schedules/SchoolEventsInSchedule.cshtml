@model DLLGakuen.Entity.Schedule

@{
    ViewBag.Title = "SchoolEventsInSchedule";
}

<h2>Oversigt af @Model.Day</h2>


<head>
    @Styles.Render("~/Content/HomePage.css")
</head>
<body>
    <br />
    <div class="body-content">
        @foreach (var item in Model.SchoolEvents)
        {
            <div class="col-md-4" style="width: 200px; border: 4px solid midnightblue; border-radius: 5px" >
                <a href="@Url.Action("SchoolEventDetail","SchoolEvents", new {id = item.Id})">
                    <span id="wrapper">
                        <p style="font-size: 300%">@Html.DisplayFor(modelItem => item.Name)</p>
                        @Html.Label("Min :")
                        @Html.DisplayFor(modelItem => item.Minuttes)

                    </span>
                </a>
            </div>
        }
    </div>
<div class="row"></div>
    
    <div>
        <div style="margin-top: 30px" class="col-md-4">
            <button type="button" class="btn btnbtn-sm" style="background-color: #ff0000;">
                @Html.ActionLink("Tilbage", "OverView",null, null, new { style = "color: white" })
            </button>
        </div>
    </div>
</body>